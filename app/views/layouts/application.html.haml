%html
%head
  %title JSHQ
  = stylesheet_link_tag("application")
  = csrf_meta_tags

%body
  = link_to(image_tag('http://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png'), 'http://github.com/russ/jshq', :id => 'github')
  #wrap
    #header.container
      #logo
        = link_to('JSHQ.org', root_path)
        %h1 home for javascript plugins
      #navigation
        - if user_signed_in?
          = link_to("Logout", destroy_user_session_path, :class => 'button')
          == (#{current_user.authentication_token})
        - else
          = link_to("Register", new_user_registration_path, :class => 'button')
          = link_to("Login", new_user_session_path, :class => 'button')
    #search.container
      %p Find the JavaScript plugin you're looking for!
      = form_tag(search_packages_path, :method => "get") do
        = text_field_tag(:q)
        = submit_tag("Search Plugins", :class => 'button')
  
    #content.container
      = yield

    #footer
      %p JSHQ is a project from the #{link_to("Las Vegas Ruby Group", "http://www.meetup.com/las-vegas-ruby-on-rails/")}
    
  = javascript_include_tag("application")